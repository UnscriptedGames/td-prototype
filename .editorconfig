# Godot 4.6 & Antigravity Configuration
# Aligned with gdscript_style_template.docx
root = true

[*]
# General Formatting [cite: 6]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.gd]
# Indentation: Use Tabs (Source 4, 19)
indent_style = tab
indent_size = 4
tab_width = 4

# Line Length: Aim for 80, limit 100 (Source 5)
max_line_length = 100

# Script Structure & Formatting
# Note: These keys help Antigravity's code generation logic
quote_type = double                 # Use double quotes "like this" (Source 50)
curly_bracket_next_line = false    # Keep one statement per line logic (Source 7)

# Vertical Spacing (Source 8)
# These settings tell the AI and formatter to maintain spacing between blocks
ij_gdscript_blank_lines_around_function = 2
ij_gdscript_blank_lines_around_class = 2

[*.{tscn,tres}]
# Godot scene and resource files also use tabs for consistency
indent_style = tab
indent_size = 4